.img {
  position: absolute;
  height: 100%;
  width: 100%;
  border-radius: 5px;
  top: 0rpx;
  left: 0rpx;
  z-index: 2;
}
.upload {
  position: relative;
  width: 200rpx;
  margin: 0 auto;
  top: 30rpx;
}
.upload .upload_icon {
  border-radius: 5px;
  height: 200rpx;
  width: 200rpx;
  line-height: 200rpx;
  background-color: transparent;
  color: black;
  font-size: 100rpx;
  border: 1px solid black;
}
.upload text {
  display: inline;
  position: absolute;
  font-size: 30rpx;
  bottom: 0;
  margin-bottom: 10rpx;
  left: 40rpx;
}
.uploadPhoto {
  position: relative;
  width: 80%;
  left: 75rpx;
  top: -60rpx;
}
.uploadPhoto .upload_icon {
  height: 300rpx;
  width: 100%;
  line-height: 200rpx;
  background-color: transparent;
  color: black;
  font-size: 100rpx;
  border: 1px solid black;
}
.uploadPhoto text {
  display: inline;
  position: absolute;
  font-size: 35rpx;
  bottom: 50rpx;
  margin-bottom: 10rpx;
  left: 180rpx;
}
.info {
  width: 80%;
  margin: 120rpx auto;
  margin-top: 20rpx;
}
.info .province,
.info .school {
  border-bottom: 1px solid gray;
  font-size: 50rpx;
}
.info picker {
  text-align: center;
  font-size: 40rpx;
}
.personal_info {
  position: relative;
  width: 80%;
  margin: 0rpx auto 0;
}
.personal_info .person {
  font-size: 50rpx;
  padding: 20rpx 0;
}
.personal_info .radios {
  position: absolute;
  left: 150rpx;
  bottom: 420rpx;
}
.personal_info .radios .radio {
  padding-right: 20rpx;
}
.personal_info .info_input {
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
  height: 80rpx;
  border: 1px solid black;
}
.finish {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
}
.demo {
  height: 50rpx;
}

